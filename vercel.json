{
    "rewrites": [
        {
            "source": "/:code",
            "has": [
                {
                    "type": "host",
                    "value": "links.trak.in"
                }
            ],
            "destination": "/api/r/:code"
        },
        {
            "source": "/r/:code",
            "destination": "/api/r/:code"
        },
        {
            "source": "/((?!api/.*).*)",
            "destination": "/index.html"
        }
    ],
    "crons": [
        {
            "path": "/api/cron/cleanup",
            "schedule": "0 0 * * *"
        }
    ]
}