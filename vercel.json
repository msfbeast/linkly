{
    "rewrites": [
        {
            "source": "/r/:code",
            "destination": "/api/redirect?code=:code"
        },
        {
            "source": "/(.*)",
            "destination": "/index.html"
        }
    ],
    "crons": [
        {
            "path": "/api/cron/cleanup",
            "schedule": "0 0 * * *"
        }
    ]
}