{
    "rewrites": [
        {
            "source": "/r/:code",
            "destination": "/api/r/:code"
        },
        {
            "source": "/api/cron/cleanup",
            "destination": "/api/cron/cleanup"
        },
        {
            "source": "/api/(.*)",
            "destination": "/api/$1"
        },
        {
            "source": "/(.*)",
            "destination": "/index.html"
        }
    ],
    "crons": [
        {
            "path": "/api/cron/cleanup",
            "schedule": "0 0 * * *"
        }
    ]
}