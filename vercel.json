{
    "rewrites": [
        {
            "source": "/r/:code",
            "destination": "/api/redirect?code=:code"
        },
        {
            "source": "/(.*)",
            "destination": "/index.html"
        }
    ],
    "functions": {
        "api/redirect.ts": {
            "runtime": "edge"
        }
    },
    "crons": [
        {
            "path": "/api/cron/cleanup",
            "schedule": "0 0 * * *"
        }
    ]
}